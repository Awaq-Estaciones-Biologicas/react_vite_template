
echo "ğŸƒ Running pre-commit checks..."

run_command() {
  output=$("$@" 2>&1)
  status=$?
  if [ $status -eq 0 ]; then
    echo "âœ… $1 successful!"
  else
    echo "âŒ $1 failed!"
    echo "$output"
    return 1
  fi
}

echo "\nğŸ“ Running Prettier..."
run_command npx pretty-quick --staged

echo "\nğŸ” Running ESLint..."
run_command npm run lint

if [ $? -eq 0 ]; then
  echo "\nâœ… All checks passed! Proceeding with commit..."
else
  echo "\nâŒ One or more checks failed. Aborting commit."
  exit 1 # Evita el commit si algo falla
fi
